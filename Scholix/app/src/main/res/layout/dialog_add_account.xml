<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:background="@color/colorPrimary"
    card_view:cardElevation="8dp"
    android:layout_margin="12dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        card_view:background="@color/colorPrimary"

        android:background="@color/backgroundAccent"
        android:backgroundTint="@color/backgroundAccent"
        android:layout_height="wrap_content"
        android:padding="20dp">
        <EditText
            android:id="@+id/dialog_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:inputType="text"
            android:layout_marginBottom="10dp"/>

        <!-- Username -->
        <EditText
            android:id="@+id/dialog_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:background="@color/colorPrimary"

            android:hint="Username"
            android:inputType="text"
            android:layout_marginBottom="10dp"/>

        <!-- Password -->
        <EditText
            android:id="@+id/dialog_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:inputType="textPassword"
            android:layout_marginBottom="10dp"/>

        <!-- Source Dropdown -->
        <Spinner
            android:id="@+id/dialog_source_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"/>

        <!-- Year Dropdown (hidden unless Bar Ilan selected) -->
        <Spinner
            android:id="@+id/dialog_year_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:visibility="gone"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>
